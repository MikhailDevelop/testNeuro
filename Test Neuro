<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Слайдер пользователей</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin: 20px; }
        .slider-container { width: 80%; overflow: hidden; margin: auto; border: 1px solid #ddd; }
        .slider-wrapper { display: flex; transition: transform 0.5s ease-in-out; }
        .card { flex: 0 0 auto; background: #f9f9f9; padding: 10px; margin: 5px; text-align: center; }
        .card img { max-width: 100%; border-radius: 50%; }
        .controls { margin-top: 10px; }
        button { padding: 8px 12px; margin: 5px; border: none; background: #007BFF; color: white; cursor: pointer; }
        button:hover { background: #0056b3; }
    </style>
</head>
<body>
    <h2>Слайдер пользователей</h2>
    <label for="card-count">Карточек: </label>
    <select id="card-count">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3" selected>3</option>
        <option value="4">4</option>
    </select>
    <div class="slider-container">
        <div class="slider-wrapper"></div>
    </div>
    <div class="controls">
        <button class="prev">Назад</button>
        <button class="next">Вперед</button>
        <button class="add">Добавить</button>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const wrapper = document.querySelector(".slider-wrapper");
            const prev = document.querySelector(".prev");
            const next = document.querySelector(".next");
            const add = document.querySelector(".add");
            const select = document.querySelector("#card-count");
            
            let users = await fetchUsers();
            let index = 0;
            let visible = parseInt(select.value, 10);

            async function fetchUsers() {
                const response = await fetch("https://reqres.in/api/users");
                const data = await response.json();
                return data.data;
            }

            function renderSlider() {
                wrapper.innerHTML = users.map(user => createCard(user)).join("");
                updateTransform();
            }

            function createCard(user) {
                return `
                    <div class="card" style="width:${100 / visible}%">
                        <img src="${user.avatar}" alt="${user.first_name}">
                        <h3>${user.first_name} ${user.last_name}</h3>
                        <p>${user.email}</p>
                        <button onclick="removeUser(${user.id})">Удалить</button>
                    </div>
                `;
            }

            function updateTransform() {
                wrapper.style.transform = `translateX(-${index * (100 / visible)}%)`;
            }

            window.removeUser = id => {
                users = users.filter(user => user.id !== id);
                renderSlider();
            };

            prev.addEventListener("click", () => {
                if (index > 0) {
                    index--;
                    updateTransform();
                }
            });

            next.addEventListener("click", () => {
                if (index < users.length - visible) {
                    index++;
                    updateTransform();
                }
            });

            add.addEventListener("click", () => {
                users.push({
                    id: Date.now(),
                    first_name: "Новый",
                    last_name: "Пользователь",
                    email: "new@example.com",
                    avatar: "https://via.placeholder.com/150"
                });
                renderSlider();
            });

            select.addEventListener("change", event => {
                visible = parseInt(event.target.value, 10);
                renderSlider();
            });

            renderSlider();
        });
    </script>
</body>
</html>
