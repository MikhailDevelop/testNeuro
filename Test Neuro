<!DOCTYPE html>
<html>
<head>
    <title>Слайдер</title>
    <style>
        .slider { display: flex; overflow: hidden; width: 300px; border: 1px solid #000; }
        .card { width: 300px; text-align: center; }
    </style>
</head>
<body>
    <div class="slider"></div>
    <button onclick="prev()">Назад</button>
    <button onclick="next()">Вперед</button>
    <script>
        let index = 0;
        const slider = document.querySelector(".slider");

        fetch("https://reqres.in/api/users")
            .then(res => res.json())
            .then(data => {
                slider.innerHTML = data.data.map(u => `<div class='card'><img src='${u.avatar}'><p>${u.first_name}</p></div>`).join("");
            });

        function prev() { if (index > 0) slider.style.transform = `translateX(-${--index * 300}px)`; }
        function next() { if (index < slider.children.length - 1) slider.style.transform = `translateX(-${++index * 300}px)`; }
    </script>
</body>
</html>
